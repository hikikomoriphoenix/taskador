<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/fragment_topwords_excludedwords_listitem_background">

    <TextView
        android:id="@+id/fragment_topwords_excludedwords_listitem_textview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingLeft="@dimen/fragment_topwords_excludedwords_listitem_horizontalmargin"
        android:paddingTop="@dimen/fragment_topwords_excludedwords_listitem_verticalmargin"
        android:paddingRight="@dimen/fragment_topwords_excludedwords_listitem_horizontalmargin"
        android:paddingBottom="@dimen/fragment_topwords_excludedwords_listitem_verticalmargin"
        android:text="@string/fragment_topwords_excludedwords_lisitem_defaulttext"
        android:textAppearance="@style/ExcludedWordsTextAppearance"
        app:layout_constraintBottom_toTopOf="@+id/fragment_topwords_excludedwords_divider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/fragment_topwords_excludedwords_divider"
        android:layout_width="0dp"
        android:layout_height="@dimen/fragment_topwords_excludedwords_listitem_divider_height"
        android:background="@color/fragment_topwords_excludedwords_listitem_divider"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</android.support.constraint.ConstraintLayout>