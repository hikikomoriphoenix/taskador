<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">

    </style>

    <!-- Theme for splash screen -->
    <style name="SplashTheme" parent="@style/MainScreenTheme">

    </style>

    <!-- Theme for signup screen-->
    <style name="SignupTheme" parent="@style/MainScreenTheme">
        <item name="android:progressBarStyle">@style/SignupProgressBar</item>
    </style>

    <style name="SignupHeaderTextAppearance" parent="MainScreenHeaderTextAppearance">

    </style>

    <style name="SignupLabelTextAppearance" parent="MainScreenLabelTextAppearance">

    </style>

    <style name="SignupRulesTextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/activity_signup_rules</item>
        <item name="android:textSize">@dimen/main_screen_normal_text_size</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="SignupInvalidTextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/activity_signup_invalid</item>
        <item name="android:textSize">@dimen/main_screen_normal_text_size</item>
    </style>

    <style name="SignupUsernameAvailabilityTextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/activity_signup_username_availability_textcolor</item>
        <item name="android:textSize">@dimen/main_screen_normal_text_size</item>
    </style>

    <style name="SignupProgressBar" parent="@android:style/Widget.ProgressBar">

    </style>

    <style name="LoginTheme" parent="MainScreenTheme">

    </style>

    <style name="LoginLabelTextAppearance" parent="MainScreenLabelTextAppearance">

    </style>

    <style name="LoginSignupLinkTextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/activity_login_signup_link</item>
        <item name="android:textSize">@dimen/activity_login_signup_link_text_size</item>
    </style>

    <style name="MainScreenTheme" parent="@android:style/Theme.DeviceDefault.NoActionBar">
        <item name="android:editTextStyle">@style/MainScreenEditText</item>
    </style>

    <style name="MainScreenEditText" parent="@android:style/Widget.DeviceDefault.EditText">
        <item name="android:background">@drawable/main_screen_edittext_background</item>
        <item name="android:textColorHint">@color/main_screen_edit_text_hint_color</item>
        <item name="android:textColor">@color/main_screen_edit_text_text_color</item>
        <item name="android:padding">@dimen/main_screen_edit_text_padding</item>
    </style>

    <style name="MainScreenHeaderTextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/main_screen_header_text_color</item>
        <item name="android:textSize">@dimen/main_screen_header_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MainScreenLabelTextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/main_screen_label_text_color</item>
        <item name="android:textSize">@dimen/main_screen_label_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MainInAppTheme" parent="AppTheme">
        <item name="android:dropDownSpinnerStyle">@android:style/Widget.Spinner.DropDown</item>
    </style>

    <style name="MainInAppHeaderTextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/activity_maininapp_header_textcolor</item>
        <item name="android:textSize">@dimen/activity_maininapp_header_textsize</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MainInappFetchindDataTextAppearance" parent="Base.TextAppearance.AppCompat">
        <item name="android:textColor">@color/activity_maininapp_fetchingdataview_textcolor</item>
    </style>

    <style name="MainInappProgressTextAppearance" parent="Base.TextAppearance.AppCompat">
        <item name="android:textColor">@color/activity_maininapp_progress_textcolor</item>
    </style>

    <style name="TodoTAsksAddTaskEditText" parent="Base.V7.Widget.AppCompat.EditText">
        <item name="android:background">@drawable/fragment_todotasks_addtask_box_background</item>
        <item name="android:textColor">@color/fragment_todotasks_addtask_textcolor</item>
        <item name="android:textColorHint">@color/fragment_todotasks_addtask_textcolorhint</item>
        <item name="android:textSize">@dimen/fragment_todotasks_addtask_textsize</item>
        <item name="android:padding">@dimen/fragment_todotasks_addtask_box_padding</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="TodoTasksListItemTextViewTextAppearance" parent="Base.TextAppearance.AppCompat">
        <item name="android:textColor">@color/fragment_todotasks_listitem_textview_textcolor</item>
        <item name="android:textSize">@dimen/fragment_todotasks_listitem_textview_textsize</item>
    </style>

    <style name="FinishedTasksListItemTextViewTextAppearance" parent="Base.TextAppearance.AppCompat">
        <item name="android:textColor">@color/fragment_finishedtasks_listitem_textview_textcolor
        </item>
        <item name="android:textSize">@dimen/fragment_finishedtasks_listitem_textview_textsize
        </item>
    </style>

    <style name="FinishedTasksListItemDateFinishedTextAppearance" parent="Base.TextAppearance.AppCompat">
        <item name="android:textColor">
            @color/fragment_finishedtasks_listitem_datefinished_textcolor
        </item>
    </style>

    <style name="TopWordsNumResultsLabelTextAppearance" parent="Base.TextAppearance.AppCompat">
        <item name="android:textColor">@color/fragment_topwords_numresults_label_textcolor</item>
    </style>

    <style name="TopWordsNumResultsSpinner" parent="@android:style/Widget.Holo.Light.Spinner">

    </style>

    <style name="TopWordsColumnLabelTextAppearance" parent="Base.TextAppearance.AppCompat">
        <item name="android:textColor">@color/fragment_topwords_columnlabel_textcolor</item>
    </style>

    <style name="TopWordsListItemWordTextAppearance" parent="Base.TextAppearance.AppCompat">
        <item name="android:textColor">@color/fragment_topwords_listitem_word_textcolor</item>
    </style>

    <style name="TopWordsListItemCountTextAppearance" parent="Base.TextAppearance.AppCompat">
        <item name="android:textColor">@color/fragment_topwords_listitem_count_textcolor</item>
    </style>

    <style name="TopWordsNumResultsSpinnerListItemTextAppearance" parent="Base.TextAppearance.AppCompat">
        <item name="android:textColor">
            @color/fragment_topwords_numresultsspinner_listitem_textcolor
        </item>
    </style>

    <style name="ExcludedWordsTextAppearance" parent="Base.TextAppearance.AppCompat">
        <item name="android:textColor">@color/fragment_topwords_excludedwords_listitem_textcolor
        </item>
    </style>
</resources>
